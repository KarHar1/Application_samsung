<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">



    


            <EditText
                android:id="@+id/searchBarExercises"
                android:layout_width="336dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_1"
                android:hint="Search exercises.."
                android:textSize="24sp"
                app:fontFamily="@font/quicksand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/exerciseView"
                android:layout_width="280dp"
                android:layout_height="115dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_1"
                android:hint="."
                android:inputType="numberSigned"
                android:textSize="24sp"
                app:fontFamily="@font/quicksand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchBarExercises" />

            <Button
                android:id="@+id/okExButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:text="add"
                android:background="@color/green"
                app:layout_constraintStart_toEndOf="@+id/exerciseView"
                app:layout_constraintTop_toBottomOf="@+id/searchBarExercises" />

            <Button
                android:id="@+id/noExButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:text="remove"
                android:background="@color/red"
                app:layout_constraintStart_toEndOf="@+id/exerciseView"
                app:layout_constraintTop_toBottomOf="@+id/okExButton" />

            <ListView
                android:id="@+id/foodItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exerciseView"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="16dp" />










</androidx.constraintlayout.widget.ConstraintLayout>
