<!-- history_fragment.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/selectDateButton"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:background="@drawable/okbttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/datedate"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text=""
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDateButton" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datedate">

        <TableRow>

            <TextView
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Eaten"
                android:textSize="24dp"
                android:background="@drawable/edittext_1"
                />

            <TextView
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:background="@drawable/edittext_1"
                android:text="Burned"
                android:textSize="24dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/eattenF"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text=""
                android:background="@drawable/edittext_1"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/burnedF"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_1"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text=""
                android:textSize="24dp" />
        </TableRow>

    </TableLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/topnav"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:menu="@menu/top_nav_bar"
        android:theme="@style/BottomAppBarTheme"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="336dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topnav" />


</androidx.constraintlayout.widget.ConstraintLayout>
