<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <Button
        android:id="@+id/settingsbttn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <RelativeLayout
        android:id="@+id/vector"
        android:layout_width="match_parent"
        android:layout_height="139.79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/vector"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <TextView
            android:id="@+id/xxxx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="76dp"
            android:background="#FF5722"
            android:text="Eaten"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:fontFamily="@font/quicksand_bold" />

        <TextView
            android:id="@+id/xxxx"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="38dp"
            android:background="#FFFFFF"
            android:text="Calories"
            android:textSize="24sp"
            app:fontFamily="@font/quicksand_bold" />

        <TextView
            android:id="@+id/xxxx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="11dp"
            android:background="#FF5722"
            android:text="Burned"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:fontFamily="@font/quicksand_bold" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="-10dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="139dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- TextViews for content -->
            <FrameLayout
                android:id="@+id/rectangle_2"
                android:layout_width="340dp"
                android:layout_height="165dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_1"
                android:contentDescription="Description for Breakfast"
                android:text="Breakfast"
                android:textSize="24sp"
                app:fontFamily="@font/quicksand" />

            <FrameLayout
                android:id="@+id/rectangle_3"
                android:layout_width="340dp"
                android:layout_height="165dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_1"
                android:contentDescription="Description for Lunch"
                android:text="Lunch"
                android:textSize="24sp"
                app:fontFamily="@font/quicksand" />

            <FrameLayout
                android:id="@+id/rectangle_4"
                android:layout_width="340dp"
                android:layout_height="165dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_1"
                android:contentDescription="Description for Dinner"
                android:text="Dinner"
                android:textSize="24sp"
                app:fontFamily="@font/quicksand" />

            <FrameLayout
                android:id="@+id/rectangle_5"
                android:layout_width="340dp"
                android:layout_height="165dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_1"
                android:contentDescription="Description for Snacks"
                android:text="Snacks"
                android:textSize="24sp"
                app:fontFamily="@font/quicksand" />

            <FrameLayout
                android:id="@+id/rectangle_6"
                android:layout_width="340dp"
                android:layout_height="165dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_1"
                android:contentDescription="Description for Exercise"
                android:text="Exercise"
                android:textSize="24sp"
                app:fontFamily="@font/quicksand" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>




