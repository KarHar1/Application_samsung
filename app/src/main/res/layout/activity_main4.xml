<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/buttonColor"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">




            <EditText
                android:id="@+id/searchBar"
                android:layout_width="336dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_1"
                android:hint="Search food..(in grams), def(100g)"
                android:textSize="20dp"
                app:fontFamily="@font/quicksand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:hint="."
                android:id="@+id/booo"
                android:layout_width="336dp"
                android:layout_height="110dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_1"
                android:textSize="24dp"
                app:fontFamily="@font/quicksand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchBar" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:layout_marginTop="3.5dp"
        android:background="@drawable/okbttn"
        android:text="add"
        app:layout_constraintBottom_toTopOf="@+id/noButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booo" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:background="@drawable/buttondr"
        android:text="remove"
        app:layout_constraintBottom_toTopOf="@+id/foodItemList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/okButton"
        android:layout_marginTop="3.5dp"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
                android:id="@+id/foodItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_1"
                app:layout_constraintTop_toBottomOf="@+id/noButton"
        android:layout_marginTop="5dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>
